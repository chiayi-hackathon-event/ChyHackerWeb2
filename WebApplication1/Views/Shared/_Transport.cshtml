@* 交通 *@

<div class="info-title">
    <h3>交通分析</h3>
</div>

<section id="transport" class="info-block">
    <section class="info-section">
        <content>
            <button id="btn_DrawPoly" class="btn-blue-inverse">選取範圍</button>
            <button id="btn_Reset" class="btn-blue-inverse">清除</button>
            <button id="btn_Clear" class="btn-blue-inverse">踩地雷</button>
        </content>
    </section>

    <section class="info-section">
        <h3>公車服務</h3>
        <content>
            <table class="tbl-service-count">
                <tr>
                    <td rowspan="2"><img src="~/Content/img/Transport/BusService.svg" /></td>
                    <td><h1 name="hasService" class="counter">0</h1></td>
                </tr>
                <tr>
                    <td colspan="2">已服務景點數</td>
                </tr>
                <tr>
                    <td rowspan="2"><img src="~/Content/img/Transport/NoBusService.svg" /></td>
                    <td><h1 name="hasServicenoService" class="counter">0</h1></td>
                </tr>
                <tr>
                    <td colspan="2">未服務景點數</td>
                </tr>
            </table>
        </content>
    </section>

    <section class="info-section">
        <h3>無公車服務景點清單</h3>
        <content>
        </content>
    </section>
</section>